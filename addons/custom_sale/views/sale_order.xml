<odoo>
    <record id="custom_sale.report_saleorder_document_inherit" model="ir.ui.view">
        <field name="name">custom_sale.report_saleorder_document</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.report_saleorder_document"/>
        <field name="arch" type="xml">
            <xpath expr="//th[@name='th_description']" position="before">
                <th>Image Ref.</th>
            </xpath>

            <xpath expr="//td[@name='td_name']" position="before">
                <td name="td_image_product"><span t-field="line.product_id.image_128" t-options="{'widget':'image'}"></span></td>
            </xpath>

        </field>
    </record>
</odoo>